{
  "name": "crypto_arbitrage_monitoring_system",
  "version": "1.0.0",
  "type": "module",
  "description": "Real-time cryptocurrency arbitrage monitoring dashboard",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "setup": "node setup-real-trading.js",
    "setup-trading": "node setup-real-trading.js",
    "test": "mocha tests/**/*.test.js --timeout 5000",
    "test:watch": "mocha tests/**/*.test.js --watch",
    "test:coverage": "c8 --reporter=html --reporter=text-summary --reporter=json-summary --report-dir coverage --clean mocha tests/**/*.test.js",
    "test:usdt": "node test-usdt-system.js",
    "test:system": "node test-usdt-system.js",
    "lint": "eslint . --ext js"
  },
  "keywords": [
    "crypto",
    "arbitrage",
    "monitoring",
    "dashboard",
    "websocket",
    "ccxt"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "ccxt": "^4.1.50",
    "chalk": "^5.6.2",
    "compression": "^1.8.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "inquirer": "^9.3.8",
    "node-cache": "^5.1.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.10",
    "ora": "^6.3.1",
    "p-limit": "^5.0.0",
    "prom-client": "^15.1.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "chai": "^6.2.0",
    "eslint": "^8.56.0",
    "mocha": "^11.7.5",
    "supertest": "^6.3.4",
    "adm-zip": "^0.5.12"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "ignorePatterns": [
      "node_modules/**",
      "dashboard-app/**",
      "mobile/**",
      "public/**",
      "logs/**",
      "data/**",
      "**/*.json",
      "**/*.md"
    ]
  }
}
