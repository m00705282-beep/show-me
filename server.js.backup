// Configuration: Max coins limit
const MAX_COINS = 100; // Maximum number of coins to track
const MIN_VOLUME_USD = 1000000; // Minimum $1M volume

// Add trending coins to the regular coin list
function addTrendingCoins(trendingData) {
  if (!trendingData || !trendingData.topOpportunities) return;
  
  // Check if we're at the limit
  if (coins.length >= MAX_COINS) {
    console.log(`[coins] ‚ö†Ô∏è  Limit reached (${MAX_COINS} coins). Skipping auto-add.`);
    return;
  }
  
  let addedCount = 0;
  const coinsSet = new Set(coins);
  const availableSlots = MAX_COINS - coins.length;
  
  // Add top trending coins (limited by available slots)
  const maxToAdd = Math.min(10, availableSlots);
  
  for (const coin of trendingData.topOpportunities.slice(0, maxToAdd)) {
    if (!coinsSet.has(coin.symbol)) {
      // Only add if volume is high enough
      if (coin.volume24h && coin.volume24h > MIN_VOLUME_USD) {
        coins.push(coin.symbol);
        coinsSet.add(coin.symbol);
        addedCount++;
        console.log(`[coins] Added trending coin: ${coin.symbol} (${coin.source}, score: ${coin.score.toFixed(2)})`);
        
        // Stop if we reached the limit
        if (coins.length >= MAX_COINS) {
          console.log(`[coins] ‚ö†Ô∏è  Limit reached (${MAX_COINS} coins). Stopping auto-add.`);
          break;
        }
      }
    }
  }
  
  if (addedCount > 0) {
    console.log(`[coins] Total coins now: ${coins.length}/${MAX_COINS} (added ${addedCount} trending)`);
  }
}

